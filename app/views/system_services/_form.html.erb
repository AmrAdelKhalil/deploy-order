<div class="container" style="margin-top: 100px">
  <div class="row align-items-center">
    <div class="col-md-12">
      <%= link_to "Back to services", system_services_path, :class => "btn btn-primary float-right btn-lg", :style=>"margin-bottom: 7px" %>
      <dvi>
        <%= form_with(model: system_service) do |form| %>
          <% if system_service.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(system_service.errors.count, "error") %> prohibited this system_service from being saved:</h2>

              <ul>
                <% system_service.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :name, style: "margin-top: 20px" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :tribe %>
            <%= form.text_field :tribe, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :squad %>
            <%= form.text_field :squad, class: "form-control" %>
          </div>

          <div>
            <%= form.submit "Submit", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
      </dvi>

    </div>
  </div>
</div>
