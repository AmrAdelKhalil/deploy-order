<div class="container" style="margin-top: 100px">
  <div class="row align-items-center">
    <div class="col-md-12">
      <%= link_to "Back to release trains", release_trains_path, :class => "btn btn-primary float-right btn-lg", :style=>"margin-bottom: 7px" %>
      <dvi>
        <%= form_with(model: release_train) do |form| %>
          <% if release_train.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(release_train.errors.count, "error") %> prohibited this release_train from being saved:</h2>

              <ul>
                <% release_train.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label "Engineering Manager", style: "margin-top: 20px;font-weight: bold", for: "formGroupExampleInput" %>
            <%= form.text_field :engineering_manager, class: "form-control", id: "formGroupExampleInput" %>
          </div>

          <div class="form-group">
            <%= form.label "Backend", for: "formGroupExampleInput", style: "font-weight: bold" %>
            <%= form.text_field :backend, class: "form-control", id: "formGroupExampleInput" %>
          </div>

          <div class="form-group">
            <%= form.label "date", style: "display: block;font-weight: bold" %>
            <%= form.date_field :rt_date %>
          </div>

          <div class="form-group">
            <%= form.label "services", style: "display: block;font-weight: bold" %>
            <% @all_services.each do |service| %>
              <div class="form-check form-check-inline">
                <%= form.check_box :services, { multiple: true, class: "form-check-input", checked: @release_train_services.include?(service[0]) },  service[0], false %>
                <label class="form-check-label"><%= service[1] %></label>
              </div>
            <% end %>
          </div>

          <div>
            <%= form.submit "Submit", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>

      </dvi>

    </div>
  </div>
</div>
