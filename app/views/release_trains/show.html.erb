<div class="container" style="margin-top: 100px">
  <div class="row align-items-center">
    <div class="col-md-12">
      <div class="container" style="margin-top: 100px">
        <div class="row align-items-center">
          <div class="col-md-12 d-flex justify-content-end">
            <p style="color: green"><%= notice %></p>
            <%= link_to "Edit this release train", edit_release_train_path(@release_train), :class=>"btn btn-primary btn-md" %>
            <%= link_to "Back to release trains", release_trains_path, :class=>"btn btn-primary btn-md", style: "margin-left: 5px" %>
            <%= button_to "Destroy this release train", @release_train, method: :delete, :class=>"btn btn-danger btn-md float-right", style: "margin-left: 5px" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">

      <div class="card-body">
        <%= render partial: "release_train_show", :locals=> {:release_train=> @release_train} %>
      </div>
    </div>
  </div>
</div>
